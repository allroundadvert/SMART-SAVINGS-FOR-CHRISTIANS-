<script>
let users = JSON.parse(localStorage.getItem("ssc_users")) || [];
let currentUser = null;

function register() {
  const name = rname.value;
  const phone = rphone.value;
  const password = rpassword.value;

  if(!name || !phone || !password){
    alert("Fill all fields");
    return;
  }

  users.push({
    name,
    phone,
    password,
    days: 0,
    total: 0
  });

  localStorage.setItem("ssc_users", JSON.stringify(users));
  alert("Registration successful");
}

function login() {
  const phone = lphone.value;
  const password = lpassword.value;

  const user = users.find(u => u.phone === phone && u.password === password);
  if(!user){
    alert("Invalid login");
    return;
  }

  currentUser = user;
  dashboard.style.display = "block";
  updateDashboard();
}

function updateDashboard(){
  dname.innerText = currentUser.name;
  ddays.innerText = currentUser.days;
  dtotal.innerText = currentUser.total;
}

function payToday(){
  currentUser.days += 1;
  currentUser.total += 200;
  localStorage.setItem("ssc_users", JSON.stringify(users));
  updateDashboard();
  alert("Payment marked for today");
}
</script>

